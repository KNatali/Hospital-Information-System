<Page x:Class="ProjekatSIMS.UpravnikWindows.Views.Prostorije"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjekatSIMS.UpravnikWindows.Views"
      xmlns:ns="clr-namespace:ProjekatSIMS.UpravnikWindows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Prostorije">

    <ListView ItemsSource="{Binding Prostorije}" Grid.Row="1"
                      Grid.ColumnSpan="3" Name="TeachersListView">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Path=id}" Width="100"/>
                <GridViewColumn Header="Vrsta" DisplayMemberBinding="{Binding Path=vrsta}"  Width="100"/>
                <GridViewColumn Header="Sprat"  DisplayMemberBinding="{Binding Path=sprat}"  Width="100"/>
                <GridViewColumn Header="Kvadratura" DisplayMemberBinding="{Binding Path=kvadratura}" Width="auto"/>



            </GridView>
        </ListView.View>
    </ListView>
</Page>
