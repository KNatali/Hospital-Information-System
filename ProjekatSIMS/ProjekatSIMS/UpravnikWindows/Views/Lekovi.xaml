<Page x:Class="ProjekatSIMS.UpravnikWindows.Views.Lekovi"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjekatSIMS.UpravnikWindows.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lekovi">

    <ListView ItemsSource="{Binding Lekovi}" Grid.Row="1"
                      Grid.ColumnSpan="3" Name="ListView">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Naziv" DisplayMemberBinding="{Binding Path=NazivLeka}" Width="100"/>
                <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Path=Status}"  Width="100"/>
                


            </GridView>
        </ListView.View>
    </ListView>
</Page>
