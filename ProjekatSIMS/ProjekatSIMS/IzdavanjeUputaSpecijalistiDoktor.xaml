<Page x:Class="ProjekatSIMS.IzdavanjeUputaSpecijalistiDoktor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjekatSIMS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IzdavanjeUputaDoktor">

    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="FontSize" Value="16"/>

        </Style>
        <Style  TargetType="TextBox">
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="#287D7D"/>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10" />

                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderBrush" Value="black"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Resources>

                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10" />

                </Style>
            </Style.Resources>

        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="#287D7D"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="white"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Resources>

                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10" />

                </Style>
            </Style.Resources>
        </Style>
        <Style x:Key="styleCalendar" TargetType="{x:Type Calendar}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Calendar}">
                        <!-- Wrapping in ViewBox will enlarge calendar of that size.-->
                        <Viewbox Height="270"
                         Width="270">
                            <CalendarItem x:Name="PART_CalendarItem"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                        </Viewbox>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Page.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="57"/>
                <RowDefinition  MinHeight="160"/>
                <RowDefinition  MinHeight="57"/>
                <RowDefinition  MinHeight="57"/>
                <RowDefinition  MinHeight="57"/>
                <RowDefinition  MinHeight="57"/>
                <RowDefinition  MinHeight="57"/>
                <RowDefinition  MinHeight="57"/>
                <RowDefinition  MinHeight="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="1" Grid.ColumnSpan="3" CornerRadius="10" Background="white" >
                <Grid  Grid.Row="1" Grid.ColumnSpan="2"  Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Naziv zdravstvene ustanove:" HorizontalAlignment="Left"  VerticalAlignment="Center" />
                    <Label Grid.Row="1" Grid.Column="0" Content="Ime pacijenta:" HorizontalAlignment="Left"  VerticalAlignment="Center" />
                    <Label Grid.Row="2" Grid.Column="0" Content="Prezime pacijenta:" HorizontalAlignment="Left"  VerticalAlignment="Center" />
                    <TextBox Name="Ime" Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Left" Text="" TextWrapping="Wrap" VerticalAlignment="Center" IsReadOnly="True" />
                    <TextBox Name="Prezime" Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Left" Text="" TextWrapping="Wrap" VerticalAlignment="Center" IsReadOnly="True"/>
                    <TextBox Name="NazivUstanove" Grid.Row="0" Grid.Column="1"  HorizontalAlignment="Left" Text="Zdravo Korporacija" TextWrapping="Wrap" VerticalAlignment="Center" IsReadOnly="True" FontWeight="SemiBold" />



                </Grid>
            </Border>

            <Label Grid.Row="0" Content="Izdavanje uputa za specijalisticki pregled" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="17" FontWeight="SemiBold" Grid.ColumnSpan="3"/>
            <Label Grid.Row="2" Grid.Column="0" Content="Izaberi spacijalizaciju:" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
            <ComboBox Grid.Row="2" Grid.Column="1"   SelectionChanged="DoktoriOdabraneSpecijalizacije" Name="Specijalizacije"  Height="30"  Style="{StaticResource ComboBoxFlatStyle}" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,271,0" />
            <Label Grid.Row="3" Grid.Column="0" Content="Izaberi doktora:" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,226,0"/>
            <ComboBox  SelectedItem="" Grid.Row="3" Grid.Column="1" Name="Doktori"  VerticalAlignment="Center" Height="30" Style="{StaticResource ComboBoxFlatStyle}"  ItemsSource="{Binding Path=doktoriPrikaz}" Grid.ColumnSpan="2" Margin="0,0,271,0">

                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=Ime}"/>
                            <TextBlock Text=" "/>
                            <TextBlock Text="{Binding Path=Prezime}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label Grid.Row="4" Grid.Column="0" Content="Pocetno vrijeme:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="4" Grid.Column="1"  CalendarStyle="{StaticResource styleCalendar}" Name="DatumPocetak" Grid.ColumnSpan="2" Margin="0,0,271,0"/>
            <Label Content="Krajnje vrijeme:"  Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <DatePicker Name="DatumKraj" Grid.Row="5" Grid.Column="1" CalendarStyle="{StaticResource styleCalendar}" Grid.ColumnSpan="2" Margin="0,0,271,0"/>


            <ComboBox Margin="30,0,0,0" Grid.Row="6" Grid.Column="2" Name="Termini"  VerticalAlignment="Center" Height="30" Style="{StaticResource ComboBoxFlatStyle}" />
            <Button Margin="30,0,0,0" Grid.Row="5" Grid.Column="2" Content="Prikazi slobodne termine" Click="PrikazSlobodnihTermina"  VerticalAlignment="Center" Style="{StaticResource btnIstakni}"/>

            <Label Grid.Row="6" Grid.Column="0" Content="Vremenski interval :" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
            <Grid Grid.Row="6" Grid.Column="1"  Grid.RowSpan="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>
                <TextBox  Grid.Column="0"  Name="IntervalPocetak" HorizontalAlignment="Stretch"  Text="" TextWrapping="Wrap" VerticalAlignment="Center"/>
                <Label   Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Center">:</Label>
                <TextBox  Grid.Column="2"  Name="IntervalKraj" HorizontalAlignment="Stretch"  Text="" TextWrapping="Wrap" VerticalAlignment="Center" />

            </Grid>

          
            <StackPanel  Grid.Row="8" Grid.Column="2"  HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Margin="41,0,0,0">
                <Button Content="Potvrdi" Width="100" Margin="0,0,20,0" Click="IzdavanjeUputa" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource btnStandard}"/>
                <Button Content="Odustani" Width="100" Click="Odustani" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource btnStandard}"/>

            </StackPanel>


        </Grid>
    </ScrollViewer>
</Page>
