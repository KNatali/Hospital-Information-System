<Window x:Class="ProjekatSIMS.SekretarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatSIMS"
        mc:Ignorable="d"
        Title="SekretarWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Kreiraj novi profil" Click="Kreiranje_profila" HorizontalAlignment="Left" Margin="175,120,0,0" VerticalAlignment="Top" Height="52" Width="161" Background="#FFA6B1D6"/>
        <Button Content="Pregled svih pacijenata" Click="Pretrazivanje" HorizontalAlignment="Left" Margin="448,120,0,0" VerticalAlignment="Top" Height="52" Width="161" Background="#FFA6B1D6"/>
        <Button Content="Izmeni profil pacijenta" Click="Izmena_profila" HorizontalAlignment="Left" Margin="175,220,0,0" VerticalAlignment="Top" Height="52" Width="161" Background="#FFA6B1D6"/>
        <Button Content="Obrisi pacijenta" Click="Brisanje" HorizontalAlignment="Left" Margin="448,220,0,0" VerticalAlignment="Top" Height="52" Width="161" Background="#FFA6B1D6"/>

    </Grid>
</Window>
