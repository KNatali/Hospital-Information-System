<Window x:Class="ProjekatSIMS.IzmenaAlergenaSWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatSIMS"
        mc:Ignorable="d"
        Title="IzmenaAlergenaSWindow" Height="450" Width="800">
    <Grid Grid.Column="0" Grid.Row="1" DataContext="{Binding ElementName=dataGridAlergeni,Path=SelectedItem}">
        <TextBox HorizontalAlignment="Left" x:Name="Naziv" Margin="228,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480"/>
        <Label Content="Naziv alergena" HorizontalAlignment="Left" Height="25" Margin="98,157,0,0" VerticalAlignment="Top" Width="145"/>
        <Label Content="Izmenite naziv alergena" HorizontalAlignment="Center" Height="30" Margin="0,79,0,0" VerticalAlignment="Top" Width="144" FontWeight="Bold"/>
        <Button Content="Otkaži izmenu" Click="Nazad" HorizontalAlignment="Left" Margin="196,270,0,0" VerticalAlignment="Top" Height="40" Width="100" Background="#FFA6B1D6"/>
        <Button Content="Sačuvaj" Click="Izmeni" HorizontalAlignment="Left" Margin="506,270,0,0" VerticalAlignment="Top" Height="40" Width="100" Background="#FFA6B1D6"/>

    </Grid>
</Window>
