<Window x:Class="ProjekatSIMS.Model.DoktorModel.ZakaziPregled"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatSIMS.Model.DoktorModel"
        mc:Ignorable="d"
        Title="ZakaziPregled" Height="450" Width="800">
    <Grid>
        <Label Content="Ime pacijenta" HorizontalAlignment="Left" Margin="60,59,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Ime" HorizontalAlignment="Left" Margin="300,67,0,0" Text="{Binding Path =pacijent.Ime}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Prezime pacijenta" HorizontalAlignment="Left" Margin="60,111,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Prezime" HorizontalAlignment="Left" Margin="300,119,0,0" Text="{Binding Path =pacijent.Prezime}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Datum pregleda" HorizontalAlignment="Left" Margin="60,162,0,0" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="300,164,0,0" VerticalAlignment="Top"/>
        <Label Content="Vrijeme pocetka" HorizontalAlignment="Left" Margin="60,213,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="300,221,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Trajanje:" HorizontalAlignment="Left" Margin="60,260,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="300,268,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Sala:" HorizontalAlignment="Left" Margin="60,313,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="300,321,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Label Content="Tip pregleda:" HorizontalAlignment="Left" Margin="60,364,0,0" VerticalAlignment="Top"/>

        <RadioButton Content="Standardni" HorizontalAlignment="Left" Margin="300,370,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Operacija" HorizontalAlignment="Left" Margin="443,370,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
