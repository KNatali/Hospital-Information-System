<Window x:Class="ProjekatSIMS.OdabirPrioritetaSWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatSIMS"
        mc:Ignorable="d"
        Title="OdabirPrioritetaSWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Označite šta vam je prioritet" HorizontalAlignment="Left" Height="30" Margin="310,100,0,0" VerticalAlignment="Top" Width="172" FontWeight="Bold"/>
        <ComboBox HorizontalAlignment="Center" x:Name="Tip" Margin="0,160,0,0" VerticalAlignment="Top" Width="180">
            <ComboBoxItem IsSelected="True" Content="Kod određenog doktora"/>
            <ComboBoxItem Content="U određeno vreme"/>
        </ComboBox>
        <Button Content="Otkaži" Click="Otkazi" HorizontalAlignment="Left" Margin="80,350,0,0" VerticalAlignment="Top" Height="40" Width="90" Background="#FFA6B1D6"/>
        <Button Content="Zakaži termin" Click="Zakazi" HorizontalAlignment="Left" Height="40" Margin="630,350,0,0" VerticalAlignment="Top" Width="90" Background="#FFA6B1D6"/>
    </Grid>
</Window>
