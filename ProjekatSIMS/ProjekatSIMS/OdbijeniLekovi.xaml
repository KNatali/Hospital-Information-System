<Window x:Class="ProjekatSIMS.OdbijeniLekovi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatSIMS"
        mc:Ignorable="d"
        Title="OdbijeniLekovi" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgrLekovi" ItemsSource="{Binding Lekovi}"  Margin="113,68,50,152" IsReadOnly="True" ScrollViewer.CanContentScroll="True" 
                  ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionMode="Single" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv leka" Binding="{Binding NazivLeka}" Width="150"/>
                <DataGridTextColumn Header="Opis leka" Binding="{Binding Opis}" Width="*"  />


            </DataGrid.Columns>



        </DataGrid>
        <Button Content="Izmeni lek" Click="izmeniLek" HorizontalAlignment="Center" Margin="0,308,0,0" VerticalAlignment="Top" Width="120" Height="40"/>
        <Button Content="Obrisi lek" Click="obrisiLek"  HorizontalAlignment="Center" Margin="0,369,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.328,-0.165" Height="40" Width="120"/>



    </Grid>
</Window>
