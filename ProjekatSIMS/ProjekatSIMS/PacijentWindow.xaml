<Window x:Class="ProjekatSIMS.PacijentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatSIMS"
        mc:Ignorable="d"
        Title="PacijentWindow" Height="450" Width="800">
    <Grid>
        <Label Content="PACIJENT" HorizontalAlignment="Left" Margin="46,30,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
        <Label Content="Opcije:" HorizontalAlignment="Left" Margin="46,92,0,0" VerticalAlignment="Top" FontWeight="Normal" FontStyle="Italic"/>
        <Button Content="Zakazi pregled" IsDefault="True" Click="Click_zakazi" Width="100" Height="40" HorizontalAlignment="Left" Margin="220,105,0,0" VerticalAlignment="Top"/>
        <Button Content="Otkazi pregled" IsDefault="True" Click="Click_otkazi" Width="100" Height="40" HorizontalAlignment="Left" Margin="220,177,0,0" VerticalAlignment="Top"/>
        <Button Content="Izmeni pregled" IsDefault="True" Click="Click_izmeni" Width="100" Height="40"  HorizontalAlignment="Left" Margin="220,245,0,0" VerticalAlignment="Top"/>

        <Button Content="Vidi preglede" IsDefault="True" Click="Click_vidi" Width="100" Height="40" HorizontalAlignment="Left" Margin="220,317,0,0" VerticalAlignment="Top"/>


        <DataGrid x:Name="dataGridRecepti" ItemsSource="{Binding Recepti}" IsReadOnly="True"
                  SelectionMode="Single" AutoGenerateColumns="False" Margin="380,125,41,0" Height="229" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv leka" Binding="{Binding NazivLeka}"/>
                <DataGridTextColumn Header="Kolicina" Binding="{Binding Kolicina}"/>
                <DataGridTextColumn Header="DatumPropisivanjaLeka" Binding="{Binding DatumPropisivanjaLeka}"/>
                <DataGridTextColumn Header="Uputstvo" Binding="{Binding Uputstvo}"/>

            </DataGrid.Columns>
        </DataGrid>
        


    </Grid>
</Window>
