<Page x:Class="ProjekatSIMS.WindowPacijent.KreiranjePodsetnika"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjekatSIMS.WindowPacijent"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="KreiranjePodsetnika">

    <Grid Background="#CDFEBB">
        <Button Content="Kreiraj podsetnik" HorizontalAlignment="Left" Margin="667,381,0,0" VerticalAlignment="Top" Click="Kreiraj"  Background="#A4E98A"/>
        <DatePicker HorizontalAlignment="Left" Margin="254,321,0,0" VerticalAlignment="Top" Name="DatumKraja" />
        <DatePicker HorizontalAlignment="Left" Margin="254,241,0,0" VerticalAlignment="Top" Name="DatumPocetka" />
        <TextBox HorizontalAlignment="Left" Margin="254,86,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="Naziv"/>
        <TextBox HorizontalAlignment="Left" Margin="254,142,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="94" Name="Opis" />
        <Label Content="Unesite naziv podsetnika:" HorizontalAlignment="Left" Margin="28,78,0,0" VerticalAlignment="Top"  />
        <Label Content="Unesite opis podsetnika:" HorizontalAlignment="Left" Margin="28,142,0,0" VerticalAlignment="Top"/>
        <Label Content="Unesite datum pocetka:" HorizontalAlignment="Left" Margin="28,227,0,0" VerticalAlignment="Top"/>
        <Label Content="Unesite datum kraja:" HorizontalAlignment="Left" Margin="28,319,0,0" VerticalAlignment="Top"/>
        <Label Content="Unesite svoje ime: " HorizontalAlignment="Left" Margin="28,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Unesite svoje prezime: " HorizontalAlignment="Left" Margin="28,43,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="254,14,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="Ime" />
        <TextBox HorizontalAlignment="Left" Margin="254,51,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="Prezime"/>
    </Grid>
</Page>
