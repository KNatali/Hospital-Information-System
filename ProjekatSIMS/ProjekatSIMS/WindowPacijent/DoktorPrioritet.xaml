<Page x:Class="ProjekatSIMS.WindowPacijent.DoktorPrioritet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjekatSIMS.WindowPacijent"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DoktorPrioritet">

    <Grid Background="#CDFEBB">
        <DataGrid x:Name="dataGridSlobodniTermini" ItemsSource="{Binding Termini}" IsReadOnly="True"
                  SelectionMode="Single" AutoGenerateColumns="False" Margin="50,37,50,0" Height="318" VerticalAlignment="Top" Width="600">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Termin" Binding="{Binding Termin}"/>
                <DataGridTextColumn Header="Ime doktora" Binding="{Binding ImeDoktora}"/>
                <DataGridTextColumn Header="Prezime doktora" Binding="{Binding PrezimeDoktora}"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Odaberi" IsDefault="True"  Margin="427,399,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="Odaberi_Click" Style="{StaticResource RoundedButton}"/>
        <Button Width="100" Height="40" Style="{StaticResource RoundedButton}" Click="Odustani" Margin="690,399,10,11">Odustani</Button>
        
    </Grid>
</Page>
