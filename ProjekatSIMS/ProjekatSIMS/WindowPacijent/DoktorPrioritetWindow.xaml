<Window x:Class="ProjekatSIMS.WindowPacijent.DoktorPrioritetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatSIMS.WindowPacijent"
        mc:Ignorable="d"
        Title="DoktorPrioritetWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGridSlobodniTermini" ItemsSource="{Binding Termini}" IsReadOnly="True"
                  SelectionMode="Single" AutoGenerateColumns="False" Margin="32,0,514,0" Height="317" VerticalAlignment="Center">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Termin" Binding="{Binding Termin}"/>
                <DataGridTextColumn Header="Ime doktora" Binding="{Binding ImeDoktora}"/>
                <DataGridTextColumn Header="Prezime doktora" Binding="{Binding PrezimeDoktora}"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Odaberi termin" HorizontalAlignment="Left" Margin="595,342,0,0" VerticalAlignment="Top" Height="34" Width="91" Click="Odaberi_Click"/>

    </Grid>
</Window>
