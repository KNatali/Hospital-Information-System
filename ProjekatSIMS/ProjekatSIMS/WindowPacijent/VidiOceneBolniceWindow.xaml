<Window x:Class="ProjekatSIMS.WindowPacijent.VidiOceneBolniceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatSIMS.WindowPacijent"
        mc:Ignorable="d"
        Title="VidiOceneBolniceWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGridOceneBolnice" ItemsSource="{Binding OceneBolnice}" IsReadOnly="True"
                  SelectionMode="Single" AutoGenerateColumns="False" Margin="32,0,435,0" Height="317" VerticalAlignment="Center">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ocena" Binding="{Binding Ocena}"/>
                <DataGridTextColumn Header="Komentar" Binding="{Binding Komentar}"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
